{
  "manifest_version": 3,
  "name": "codmon-image-downloader",
  "version": "1.0.1",
  "description": "parents.codmon.com で動作する画像のダウンローダーです",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://*.codmon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://parents.codmon.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}